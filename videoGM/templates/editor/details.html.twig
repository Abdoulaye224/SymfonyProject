{% extends 'base.html.twig' %}

{% block title %} Details/{{ editor.name }} {% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 1000px; width: 100%; font: 18px/1.5 sans-serif;}
    .example-wrapper code { background: #F5F5F5; padding: 6px 10px; }
    .example-wrapper ul li {padding: 10px; margin: 10px; text-decoration: none;  }
    .example-wrapper ul li a{padding: 10px; margin: 3px; text-decoration: none; display: inline; }
    .example-wrapper ul {text-decoration: none; margin-left: 120px;}
    .example-wrapper h1 {text-decoration: none; text-align: center;}
    .example-wrapper h2 {text-decoration: none;}

</style>
{% include 'layout/navbar.html.twig'%}

<div class="example-wrapper">
    <h1>{{ 'Détail_de_léditeur '|trans }}{{ editor.id }}</h1>
    <ul>
       <li><strong>Nom:</strong> {{ editor.name }} </li>
       <li><strong>Nationalité:</strong> {{ editor.nationality }} </li>
        <li><strong> Société:</strong> {{ editor.societyName }}</li>
        {%if editor.videoGame is not empty %}
            <ul>
                <h2>Cet éditeur a édité {{ editor.getVideoGame|length }} Jeux vidéos dont :</h2>
        {% for edit in editor.videoGame %}
            <li>{{ edit.title }}</li>
        {% endfor %}
    </ul>
    </ul>
{% endif %}
</div>
    </html>
{% endblock %}