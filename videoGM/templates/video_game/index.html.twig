{% extends 'base.html.twig' %}

{% block title %}Liste des jeux{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 1000px; width: 100%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 6px 10px; }
        .example-wrapper ul li {padding: 10px; margin: 10px; text-decoration: none;}
        .example-wrapper ul li a{padding: 10px; margin: 3px; text-decoration: none; display: inline;}
        .example-wrapper ul {text-decoration: none;}
        .example-wrapper a {text-decoration: none;}
    </style>
    {% include 'home/index.html.twig'%}
    <div class="example-wrapper">
        <h1>La liste des jeux disponible</h1>
        <ul>
            {# légèrement différent de php avec foreach userList as user #}
            {% for videoGame in videoGame_list %}
            <li>titre : {{ videoGame.title }} ; support : {{ videoGame.support|upper }} - description : {{ videoGame.description }} - Date de sortie : {{ videoGame.releaseDate|date('d F Y') }}
         {% if videoGame.getEditor is not empty %}- fait par :{{ videoGame.getEditor.Name  }}
                {% endif %}
                <a href="{{ path('details', {'id': videoGame.id}) }}">Voir détails</a>

                {% if is_granted("ROLE_ADMIN") %}
                    <a href="{{ path('videoGame_edit', {'id': videoGame.id}) }}" style="color: yellowgreen;">Editer</a>
                    <a href="{{ path('videoGame_delete', {'id': videoGame.id}) }}" style="color: #C82829;">Supprimer</a>
                {% endif %}
                {% endfor %}
        </ul>
        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('videoGame-create') }}">Créer un nouveau Jeu </a>
        {% endif %}
    </div>
{% endblock %}