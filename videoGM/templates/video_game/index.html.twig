{% extends 'base.html.twig' %}

{% block title %}Liste des jeux{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>La liste des jeux disponible</h1>
        <ul>
            {# légèrement différent de php avec foreach userList as user #}
            {% for videoGame in videoGame_list %}
            <li>titre : {{ videoGame.title }} ; support : {{ videoGame.support|upper }} - description : {{ videoGame.description }} - Date de sortie : {{ videoGame.releaseDate|date('d F Y') }}
                - fait par l'editeur N° : {{ videoGame.getEditor.getId  }} - {{ videoGame.getEditor.getSocietyName }}
                {% endfor %}
        </ul>
    </div>
    <a href="{{ path('home') }}">Accueil</a>
{% endblock %}