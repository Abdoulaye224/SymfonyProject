{% extends 'base.html.twig' %}

{% block title %} Détails/{{ jeu.title }} {% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 1000px; width: 100%; font: 18px/1.5 sans-serif;}
    .example-wrapper code { background: #F5F5F5; padding: 6px 10px; }
    .example-wrapper ul li {padding: 10px; margin: 10px; text-decoration: none;  }
    .example-wrapper ul li a{padding: 10px; margin: 3px; text-decoration: none; display: inline; }
    .example-wrapper ul {text-decoration: none; margin-left: 120px;}
    .example-wrapper h1 {text-decoration: none; text-align: center;}
    .example-wrapper h2 {text-decoration: none; text-align: center; border: 2px dotted black;}

</style>
{% include 'layout/navbar.html.twig'%}

    <div class="example-wrapper">
        <h1>{{ 'Détail du jeu '|trans }}{{ jeu.id }}</h1>
        <ul>
            <li> Titre: {{ jeu.title|upper }}</li>
            <li> Support: {{ jeu.support }}</li>
            <li> Description: {{ jeu.description }}</li>
            <li> Date de Sortie: {{ jeu.releaseDate|date('d F Y') }}</li>
        </ul>
        <H2>Informations sur l'éditeur, éditeur N° {{ jeu.getEditor.id }}</H2>
        <ul>
            <li> Nom: {{ jeu.getEditor.Name|upper }}</li>
            <li> Societé: {{ jeu.getEditor.societyName }}</li>
            <li> Nationalité: {{ jeu.getEditor.nationality }}</li>
        </ul>
    </div>
</html>
{% endblock %}
