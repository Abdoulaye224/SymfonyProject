{% extends 'base.html.twig' %}

{% block title %}Hello Page !{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 1000px; width: 100%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 6px 10px; }
    .example-wrapper table td {padding: 10px; margin: 10px; text-decoration: none;}
    .example-wrapper table td a {text-decoration: none;}
</style>

<div class="example-wrapper">
    <div class="example-wrapper">
        <table>
            <tr>
                <td>
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <a href="{{ path('app_logout') }}">Se déconnecter</a>
                    {% else %}
                        <a href="{{ path('app_login') }}">Se connecter</a>
                    {% endif %}
                </td>
                <td>
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('user_list') }}">Liste des utilisateur</a>
                    {% endif %}
                </td>
                <td>
                        <a href="{{ path('videoGame_list') }}">Liste des jeux videos</a>
                </td>
                <td>
                    {% if is_granted('ROLE_USER') %}
                    <a href="{{ path('editor_list') }}">Liste des éditeurs</a>
                    {% endif %}

                </td>

                <td>
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    {% if is_granted('ROLE_USER') %}
                        <a href="{{ path('profile') }}">Votre profil</a>
                    {% endif %}
                    {% else %}
                    <a href="{{ path('user-create') }}">Créer un compte</a>
                    {% endif %}
                </td>
            </tr>
        </table>
    </div>

</div>
{% endblock %}
